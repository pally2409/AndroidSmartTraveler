<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textStyle = "bold"
            android:text="What places do you like?"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp">

            <CheckBox
                android:id="@+id/checkZoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zoo" />

            <CheckBox
                android:id="@+id/checkAquarium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aquarium" />

            <CheckBox
                android:id="@+id/checkMovie_Theatre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movie Theatre" />

            <CheckBox
                android:id="@+id/checkShopping_Mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping Mall" />

            <CheckBox
                android:id="@+id/checkArt_Gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Art Gallery " />

            <CheckBox
                android:id="@+id/checkMuseums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Museums" />

            <CheckBox
                android:id="@+id/checkAmusement_Parks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Amusement Parks" />

            <CheckBox
                android:id="@+id/checkLibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How much time do you like to spend travelling?"
            android:layout_marginLeft="20dp"
            android:textStyle = "bold"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:id="@+id/textViewDate"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@android:color/darker_gray">

        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/SaveButton"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>